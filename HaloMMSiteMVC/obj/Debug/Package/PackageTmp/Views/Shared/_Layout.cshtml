<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="@Url.Content("~/content/favicon-16x16.png")"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Stylesheets  -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="stylePC.css">
    <!-- Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800,300' rel="stylesheet" type="text/css">
    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="js/menu.js"></script>
    <title>Pointcheck</title>


    <script type="text/javascript">
        $(document).ready(function () {
            // Function 1
            $(".fa-times").click(function () { // When 'X' on Nav Bar is clicked
                $(".sidebar_menu").addClass("hide_menu"); // Hide Nav Bar
                $(".toggle_menu").addClass("opacity_one"); // Make Toggle Menu visible
            });
            // Function 2
            $(".toggle_menu").click(function () { // When Toggle Menu is clicked
                $(".sidebar_menu").removeClass("hide_menu"); // Show Nav Bar
                $(".toggle_menu").removeClass("opacity_one"); // Hide Toggle Menu
            });
            // Function 3
            $(".info").hover(function () { // When Info Icon is hovered
                $(".h3Form").addClass("xForm"); // Hide Form
                $(".infoText").removeClass("xForm"); // Show Info Text
                $(".infoIcon").addClass("iconOpacity"); // Give Info Icon .5 opacity
            });
            // Function 4
            $(".info").mouseleave(function () { // When Info Icon is unhovered
                $(".h3Form").removeClass("xForm"); // Show Form
                $(".infoText").addClass("xForm"); // Hide Info Text
                $(".infoIcon").removeClass("iconOpacity"); // Restore Info Icon opacity

            });
            // Function 5
            $(".navigation_item1").click(function () { // When Nav Item 1 (Halo 2) is selected
                $(".navigation_item1").addClass("selectedNavItem"); // Make Nav Item 1 Text green
                $(".navigation_item2").removeClass("selectedNavItem"); // Make Nav Item 2 Text white
                $(".navigation_item3").removeClass("selectedNavItem"); // Make Nav Item 3 Text white
                $(".navigation_item4").removeClass("selectedNavItem"); // Make Nav Item 4 Text white

                $(".wrapper").removeClass("wrapperh3"); // Remove H3 Wrapper
                $(".wrapper").removeClass("wrapperhr"); // Remove HR Wrapper
                $(".wrapper").removeClass("wrapperProGamertags"); // Remove Pro Player Gamertags Wrapper
                $(".wrapper").addClass("wrapperh2"); // Add H2 Wrapper

                $(".proGamertags").removeClass("proGamertagsActive"); // Hide Pro Player Gamertags Table
                $(".h3Form").addClass("xForm"); // Hide Form
                $(".infoIcon").addClass("xForm"); // Hide Info Icon
                $("footer").addClass("blackFooter"); // Make Footer Text Black

                $(".h2ComingSoon").addClass("comingSoonActive"); // Show H2 Content Text
                $(".hrComingSoon").removeClass("comingSoonActive"); // Hide HR Content Text
            });
            // Function 6
            $(".navigation_item2").click(function () { // When Nav Item 2 (Halo 3) is selected
                $(".navigation_item1").removeClass("selectedNavItem"); // Make Nav Item 1 Text white
                $(".navigation_item2").addClass("selectedNavItem"); // Make Nav Item 2 Text green
                $(".navigation_item3").removeClass("selectedNavItem"); // Make Nav Item 3 Text white
                $(".navigation_item4").removeClass("selectedNavItem"); // Make Nav Item 4 Text white

                $(".wrapper").removeClass("wrapperh2"); // Remove H2 Wrapper
                $(".wrapper").removeClass("wrapperhr"); // Remove HR Wrapper
                $(".wrapper").removeClass("wrapperProGamertags"); // Remove Pro Player Gamertags Wrapper
                $(".wrapper").addClass("wrapperh3"); // Add H3 Wrapper

                $(".proGamertags").removeClass("proGamertagsActive"); // Hide Pro Player Gamertags Table
                $(".h3Form").removeClass("xForm"); // Show Form
                $(".infoIcon").removeClass("xForm"); // Show Info Icon
                $("footer").removeClass("blackFooter"); // Remove Footer Text Black

                $(".hrComingSoon").removeClass("comingSoonActive"); // Hide HR Content Text
                $(".h2ComingSoon").removeClass("comingSoonActive"); // Hide H2 Content Text
            });
            // Function 7
            $(".navigation_item3").click(function () { // When Nav Item 3 (Halo Reach) is selected
                $(".navigation_item1").removeClass("selectedNavItem"); // Make Nav Item 1 Text white
                $(".navigation_item2").removeClass("selectedNavItem"); // Make Nav Item 2 Text white
                $(".navigation_item3").addClass("selectedNavItem"); // Make Nav Item 3 Text green
                $(".navigation_item4").removeClass("selectedNavItem"); // Make Nav Item 4 Text white

                $(".wrapper").removeClass("wrapperh2"); // Remove H2 Wrapper
                $(".wrapper").removeClass("wrapperh3"); // Remove H3 Wrapper
                $(".wrapper").removeClass("wrapperProGamertags"); // Remove Pro Player Gamertags Wrapper
                $(".wrapper").addClass("wrapperhr"); // Add HR Wrapper

                $(".proGamertags").removeClass("proGamertagsActive"); // Hide Pro Player Gamertags Table
                $(".h3Form").addClass("xForm"); // Hide Form
                $(".infoIcon").addClass("xForm"); // Hide Info Icon
                $("footer").removeClass("blackFooter"); // Remove Footer Text Black

                $(".hrComingSoon").addClass("comingSoonActive"); // Show HR Content Text
                $(".h2ComingSoon").removeClass("comingSoonActive"); // Hide H2 Content Text
            });
            // Function 8
            $(".navigation_item4").click(function () { // When Nav Item 4 (Pro Player Gamertags) is selected
                $(".navigation_item1").removeClass("selectedNavItem"); // Make Nav Item 1 Text white
                $(".navigation_item2").removeClass("selectedNavItem"); // Make Nav Item 2 Text white
                $(".navigation_item3").removeClass("selectedNavItem"); // Make Nav Item 3 Text white
                $(".navigation_item4").addClass("selectedNavItem"); // Make Nav Item 4 Text green

                $(".wrapper").removeClass("wrapperh2"); // Remove H2 Wrapper
                $(".wrapper").removeClass("wrapperh3"); // Remove H3 Wrapper
                $(".wrapper").removeClass("wrapperhr"); // Remove HR Wrapper
                $(".wrapper").addClass("wrapperProGamertags"); // Add Pro Player Gamertags Wrapper

                $(".proGamertags").addClass("proGamertagsActive"); // Show Pro Player Gamertags Table
                $(".h3Form").addClass("xForm"); // Hide Form
                $(".infoIcon").addClass("xForm"); // Hide Info Icon
                $("footer").addClass("blackFooter"); // Make Footer Text Black

                $(".hrComingSoon").removeClass("comingSoonActive"); // Hide HR Content Text
                $(".h2ComingSoon").removeClass("comingSoonActive"); // Hide H2 Content Text

            });
            // Function 9
            $(".searchButton").click(function () { // When Search Button is clicked
                $(".sidebar_menu").toggleClass("hide_menu"); // Hide Nav Bar
                $(".toggle_menu").toggleClass("opacity_one"); // Show Toggle Menu
            });

        });

    </script>

</head>
<body>

        @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
